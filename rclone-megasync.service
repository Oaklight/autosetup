[Unit]
Description=MegaSync (rclone)
AssertPathIsDirectory=%h/MegaSync
# Make sure we have network enabled
After=network.target

[Service]
Type=simple

ExecStart=/usr/bin/rclone --vfs-cache-mode full --vfs-cache-max-age 720h0m0s mount MegaSync: %h/MegaSync

# Perform lazy unmount
ExecStop=/usr/bin/fusermount -zu %h/MegaSync

# Restart the service whenever rclone exists with non-zero exit code
Restart=on-failure
RestartSec=15

[Install]
# Autostart after reboot
WantedBy=default.target
